             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieDatabase.AddMovie">
    <StackLayout Margin="10">
        <Entry x:Name ="movieName" Placeholder="Enter Movie Name"/>
            <Entry x:Name="movieDirector" Placeholder="Enter Movie Director"/>
